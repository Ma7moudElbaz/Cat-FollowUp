<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".job_orders.JobOrderDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/description"
                android:src="@drawable/ic_back"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/job_order_details"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:sv_animationType="All"
            app:sv_doneCircleColor="@color/green"
            app:sv_doneCircleRadius="20dp"
            app:sv_doneStepLineColor="@color/green"
            app:sv_doneStepMarkColor="@color/white"
            app:sv_doneTextColor="@color/black"
            app:sv_nextStepCircleColor="@color/stepper_gray"
            app:sv_nextStepCircleEnabled="true"
            app:sv_nextStepLineColor="@color/light_gray"
            app:sv_nextTextColor="@color/light_gray"
            app:sv_selectedCircleColor="@color/light_gray"
            app:sv_selectedCircleRadius="20dp"
            app:sv_selectedStepNumberColor="@color/black"
            app:sv_selectedTextColor="@color/light_gray"
            app:sv_stepNumberTextSize="20sp"
            app:sv_stepPadding="4dp"
            app:sv_steps="@array/job_orders_steps" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/request_details_bg"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp">

    </LinearLayout>

</LinearLayout>